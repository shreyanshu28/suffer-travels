@{
    ViewData["title"] = "Verifty Email";
}
@model Register
<div
  style="
    background-image: url('../photos/maps-dark.jpg');
    background-size: cover;
  "
>
  <main class="container p-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a asp-controller="Home" asp-action="Index">Home</a>
      </li>
        <li class="breadcrumb-item">
          <a asp-controller="Home" asp-action="Register">Register</a>
        </li>
      <li class="breadcrumb-item active">New Password</li>
    </ol>

    <div class="row justify-content-center">
      <form method="post" class="d-flex justify-content-center container main-body">
        <div class="card card-style" style="width: 40rem">
          <div class="card-body d-flex flex-column justify-content-between">
            <h1
              class="card-title card-title-style align-self-start"
              style="text-align: center; font-size: 4rem"
            >
              New password
            </h1>
            <div>
              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control"
                  asp-for="email"
                  id=""
                  placeholder="Email address"
                />
                <label asp-for="email">Email address</label>
                <span asp-validation-for="email" class="text-danger"></span>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id=""
                  placeholder="Password"
                  asp-for="password"
                />
                <label asp-for="password">Password</label>
                <span asp-validation-for="password" class="text-danger"></span>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id=""
                  placeholder="Retype password"
                  asp-for="rePassword"
                />
                <label asp-for="rePassword">Re-type password</label>
                <span asp-validation-for="rePassword" class="text-danger"></span>
              </div>
            </div>
            <div class="d-flex justify-content-between mt-3">
              <button
                type="submit"
                class="btn btn-primary"
                style="font-size: 1.5rem"
              >
                Next
              </button>
              <span
                >
                <a asp-controller="User" asp-action="Register">Back</a></span
              >
            </div>
          </div>
        </div>
      </form>
    </div>
  </main>
</div>


