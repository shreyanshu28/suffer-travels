@using Suffer_Travels.ViewModel
@model UserOrderVM
@{
    ViewData["title"] = "AddOrder";
    Layout = "~/Views/Shared/User/Customer.cshtml";
}

<h2 class="mt-3" style="text-align: center">
    Your Orders
</h2>
<div class="d-flex flex-wrap justify-content-center mt-3">
    @foreach(var tour in Model.tours)
    {
        if (tour.IsActive)
        {
            <form method="POST" asp-action="Payment" asp-controller="User" asp-route-id="" class="card me-3 mb-3" style="width: 18rem;">
                @{
                    uint photoId = Model.tourPhotos.First(tPhoto => tPhoto.TourId == tour.TId).PhotoId;
                }
                <img src="~/photos/tour/@Model.photos.First(photo => photo.PId == photoId).ImagePath" class="card-img-top" style="object-fit: cover; height: 25rem; width: 100%" alt="@Model.photos.First(photo => photo.PId == photoId).Description">
                <div class="card-body">
                    <h5 class="card-title">@tour.TourName</h5>
                    <p class="card-text">@Model.tourTypes.First(type => type.TtId == tour.TourTypeId).TtName</p>
                    <div class="card-text" style="">@tour.Description</div>
                    <div class="mt-3">Guests
                        <div class="d-flex">
                            <label>
                                Adult <div>@Model.orders.First(o => o.OId == Model.orderTours.First(ot => ot.TourId == tour.TId).OrderId).TotalAdults</div>
                            </label>
                            <label class="ms-2">
                                Child <div>@Model.orders.First().TotalChildrens</div>
                            </label>
                            <label class="ms-2">
                                Infant <div>@Model.orders.First().TotalInfants</div>
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <h6>₹@Model.orders.First(order => order.OId == Model.orderTours.First(ot => ot.TourId == tour.TId).OrderId).Total</h6>
                        @if(Model.orders.First(order => order.OId == Model.orderTours.First(ot => ot.TourId == tour.TId).OrderId).Payment == "Pending")
                        {
                            <button class="btn btn-primary">Complete Payment</button>
                        }
                    </div>
                </div>
            </form>
        }
    }
</div>