@using Suffer_Travels.ViewModel
@model UserOrderVM
@{
    ViewData["title"] = "AddOrder";
    Layout = "~/Views/Shared/User/Customer.cshtml";
}

<h2 class="mt-3" style="text-align: center">
    Your Orders
</h2>
<div class="d-flex flex-wrap justify-content-center mt-3">
    @foreach(Order order in Model.orders)
    {
        @*if (tour.IsActive)
            {*@
        <form method="POST" asp-action="Payment" asp-controller="User" asp-route-id="@order.OId" class="card me-3 mb-3" style="width: 18rem;">
            @{
                Model.tour = Model.tours.First(t => t.TId == Model.orderTours.First(ot => ot.OrderId == order.OId).TourId);
                uint photoId = Model.tourPhotos.First(tPhoto => tPhoto.TourId == Model.tour.TId).PhotoId;
                }
                <img src="~/photos/tour/@Model.photos.First(photo => photo.PId == photoId).ImagePath" class="card-img-top" style="object-fit: cover; height: 25rem; width: 100%" alt="@Model.photos.First(photo => photo.PId == photoId).Description">
                <div class="card-body">
                    <h5 class="card-title">@Model.tour.TourName</h5>
                    <p class="card-text">@Model.tourTypes.First(type => type.TtId == Model.tour.TourTypeId).TtName</p>
                    <div class="card-text" style="">@Model.tour.Description</div>
                    <div class="mt-3">Guests
                        <div class="d-flex">
                            <label>
                                Adult <div>@order.TotalAdults</div>
                            </label>
                            <label class="ms-2">
                                Child <div>@order.TotalChildrens</div>
                            </label>
                            <label class="ms-2">
                                Infant <div>@order.TotalInfants</div>
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <h6>₹@order.Total</h6>
                        @if(order.Payment == "Pending")
                        {
                            <button class="btn btn-primary">Complete Payment</button>
                        }
                    </div>
                </div>
            </form>
        @*}*@
    }
</div>