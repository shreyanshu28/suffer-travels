@model User

@{
    ViewData["title"] = "Edit Profile";

    switch (Convert.ToInt32(ViewData["Role"]))
    {
        case 1:
            Layout = "~/Views/Shared/User/_Admin.cshtml";
            break;
        case 2:
            Layout = "~/Views/Shared/User/Customer.cshtml";
            break;
        case 3:
            Layout = "~/Views/Shared/User/_Hotel.cshtml";
            break;
        case 4:
            Layout = "~/Views/Shared/User/_Vehicle.cshtml";
            break;
    }
}

<div style="
    background-image: url('../photos/maps-dark.jpg');
    background-size: cover;
  ">
    <main class="container p-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="User" asp-action="HomePage">Home</a>
            </li>
            <li class="breadcrumb-item active">Edit Profile</li>
        </ol>

        <div class="row justify-content-center">
            <form method="post" enctype="multipart/form-data" class="d-flex justify-content-center container main-body">
                <div class="card card-style" style="width: 40rem">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h1 class="card-title card-title-style align-self-start"
                            style="text-align: center; font-size: 4rem">
                            Edit Profile
                        </h1>
                        <div class="d-flex justify-content-center flex-column">
                            <div class="card mb-3 align-self-center" style="">
                                <img src="../photos/user/@Model.ProfilePhoto" id="ProfilePhoto" class="card-img-top" style="width: 180px; height: 180px; border-radius: 50%" alt="">
                            </div>
                            <div class="card mb-3 align-self-center" style="">
                                <input type="file" asp-for="ProfilePhoto" class="form-control" name="ProfilePhoto" id="UploadProfilePhoto" placeholder="Upload profile photo" />
                                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="hidden" asp-for="UId" id="hidUserId" />
                                <input type="text" class="form-control" asp-for="Fname" id=""
                                    placeholder="First name" />
                                <label asp-for="Fname">First name</label>
                                <span asp-validation-for="Fname" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="" placeholder="Middle name"
                                    asp-for="Mname" />
                                <label asp-for="Mname">Middle name</label>
                                <span asp-validation-for="Mname" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="" placeholder="Last name" asp-for="Lname" />
                                <label asp-for="Lname">Last name</label>
                                <span asp-validation-for="Lname" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1"
                                        autocomplete="on" asp-for="Gender" value='M' />
                                    <label class="btn btn-outline-primary" for="btnradio1">Male</label>
                                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2"
                                        autocomplete="on" asp-for="Gender" value='F' />
                                    <label class="btn btn-outline-primary" for="btnradio2">Female</label>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="tel" class="form-control" id="" placeholder="Contact no"
                                    asp-for="ContactNo" />
                                <label asp-for="ContactNo">Contact number</label>
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-start">
                            <button type="submit" id="btnUpdate" class="btn btn-primary" >Update</button>
                            @*<a asp-controller="User" asp-action="AddPassword" id="submit" class="btn btn-primary">Change Password</a>*@
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}