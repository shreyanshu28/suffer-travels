@model User
@{
    ViewData["title"] = "Log In - Suffer Travels";
}

<form method="post">
    <table width="0">
        <tr>
            <td>
                <label asp-for="Username" class="text-dark"></label>
            </td>
            <td>
                <input asp-for="Username" id="name" type="text" class="form-control" required/>
            </td>
        <tr>
            <td>
                <span asp-validation-for="Username" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Password" class="text-dark"></label>
            </td>
            <td>
                <input asp-for="Password" type="password" id="password" class="form-control" required/>
            </td>
        </tr>
        <tr>
            <td>
                <span asp-validation-for="Password" class="text-danger"></span>
            </td>
        <tr>
            <td>
                <button type="submit" id="submit" class="btn btn-info m-2">Login</button>
            </td>
            <td>
                <a asp-controller="User" asp-action="Register" class="btn btn-warning" >Register</a>
            </td>
        </tr>
    </table>
</form>


@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}