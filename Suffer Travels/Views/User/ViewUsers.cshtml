@model IEnumerable<User>
@{
    ViewData["title"] = "View User Details";
    Layout = "~/Views/Shared/User/_Admin.cshtml";
}

<table class="table table-bordered table-dark table-striped" id="myTable" >
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Date Of Birth
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Role Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.UId
                </td>
                <td>
                    @item.Fname
                </td>
                <td>
                    @item.Mname
                </td>
                <td>
                    @item.Lname
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.DateOfBirth
                </td>
                <td>
                    @item.ContactNo
                </td>
                <td>
                    @item.Email
                </td>
                    @if(item.RoleId == 1)
                    {
                        <td>Admin</td>;
                    }
                    else if(item.RoleId == 2)
                    {
                        <td>Customer</td>;
                    }
                    else if(item.RoleId == 3)
                    {
                        <td>Hotel</td>;
                    }
                    else if(item.RoleId == 4)
                    {
                        <td>Vehicle</td>;
                    }
                    else
                    {
                        <td>Never should have come here</td>;
                    }
                <td>
                    @item.Status
                </td>>
                <td>
                    <div class="w-75 btn-group" role="group">
                        @if (item.RoleId != 2)
                        {
                            @if (item.Status.Equals("Approved"))
                            {
                                <a class="btn btn-danger mx-2" asp-controller="User" asp-action="DeclineRole" asp-route-id="@item.UId" >Decline Role</a>                                
                            }
                            else if(item.Status.Equals("Declined"))
                            {
                                <a class="btn btn-success mx-2" asp-controller="User" asp-action="ApproveRole" asp-route-id=@item.UId >Approve Role</a>
                            }
                            else
                            {
                                <a class="btn btn-success mx-2" asp-controller="User" asp-action="ApproveRole" asp-route-id=@item.UId >Approve Role</a>
                                <a class="btn btn-danger mx-2" asp-controller="User" asp-action="DeclineRole" asp-route-id="@item.UId" >Decline Role</a>                  
                            }
                        }                        
                    </div>                    
                </td>
            </tr>
        }
    </tbody>
</table>