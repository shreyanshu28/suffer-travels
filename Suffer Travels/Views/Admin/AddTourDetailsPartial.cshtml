@using Suffer_Travels.ViewModel
@model TourViewModel;

<div class="modal fade" id="AddDetailsModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="AddDetailsModal">Add Tour Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close" ></button>
      </div>
      <form method="post" asp-action="AddTourDetails" class="d-flex justify-content-center container main-body" >
        <div class="card card-style modal-body">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.TourName">Tour name</label>
                <input type="text" class="form-control" asp-for="tours.TourName" id="" placeholder="Tour name" />
                <span asp-validation-for="tours.TourName" class="text-danger" ></span>
              </div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.Description" >Description</label>
                <input type="text" class="form-control" asp-for="tours.Description" id="" placeholder="Tour description" />
              </div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.TotalSeats" >Total Seats</label>
                <input type="number" class="form-control" asp-for="tours.TotalSeats" id="" placeholder="Total Seats"/>
                <span asp-validation-for="tours.TotalSeats" class="text-danger" ></span>
              </div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.Price">Price Per Person</label>
                <input type="number" class="form-control" asp-for="tours.Price" id="" placeholder="Price"/>
                <span asp-validation-for="tours.Price" class="text-danger" ></span>
              </div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.NoOfDays">Number of Days</label>
                <input type="number" class="form-control" asp-for="tours.NoOfDays" id="" placeholder="Days"/>
                <span asp-validation-for="tours.NoOfDays" class="text-danger"></span>
              </div>
              <div class="mb-3">
                <label class="form-label" asp-for="tours.TourTypeId">Tour Type</label>
                <select asp-for="tours.TourTypeId" class="form-select" aria-label="Defaul select example">
                  <option value="-1">Select from the list</option>
                    @foreach (var item in Model.tourTypes) 
                    {
                        <option value="@item.TtId">@item.TtName</option>
                    }
                </select>
                <span asp-validation-for="tours.Price" class="text-danger"></span>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >
              Close
            </button>
            <button type="submit" class="btn btn-primary">Add Details</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
