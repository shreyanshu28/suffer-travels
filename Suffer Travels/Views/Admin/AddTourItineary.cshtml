@using Suffer_Travels.ViewModel
@model TourViewModel

@{
    ViewData["title"] = "Edit Tour";
    Layout = "~/Views/Shared/User/_Admin.cshtml";
}

<form method="post" class="d-flex justify-content-center container main-body">
    <div class="card card-style">
          <div class="card-body d-flex flex-wrap flex-column justify-content-between">
            <div>
                  <input type="hidden" asp-for="TourId" />
    @for(int i=1; i<=Model.NoOfDays; i++)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="tourItinerary.Day">Day</label>
            <input type="text" class="form-control" asp-for="tourItinerary.Day" id="" placeholder="Day" value=@i readonly />
            <span asp-validation-for="tourItinerary.Day" class="text-danger" ></span>
        </div>
        <div class="mb-3">
            
        </div>
    }
            </div>
        </div>
    </div>
</form>