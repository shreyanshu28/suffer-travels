@using Suffer_Travels.ViewModel
@model TourViewModel

@{
    ViewData["title"] = "Edit Tour";
    Layout = "~/Views/Shared/User/_Admin.cshtml";
}

<form method="post" asp-route-id="@Model.TourId" class="container">
    <div class="nav-container mt-3 mb-3" style="position:relative">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Home">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="ManageTours">Tours</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="ManageTours">Manage Tours</a>
            </li>
            <li class="breadcrumb-item active mr-auto">Add Itineary</li>
        </ol>
    </div>
    <div class="card card-style mb-3" style="margin: auto">
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="d-flex ">
                <div class="" style="width: 15rem">
                    Tour name: <div>@Model.tourDetail.TourName</div>
                </div>
                <div class="">
                    Description: <div>@Model.tourDetail.Description</div>
                </div>
            </div>
            <div class="d-flex">
                Prices:
                <label class="ms-2">
                    Adult: <div>₹@Model.tourDetail.Price</div>
                </label>
                <label class="ms-2">
                    Child: <div>₹@Model.tourDetail.PriceChildren</div>
                </label>
                <label class="ms-2">
                    Infant: <div>₹@Model.tourDetail.PriceInfant</div>
                </label>
            </div>
        </div>
    </div>
    <div class="card card-style d-flex" style="width: 40rem; margin: auto">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <input id="tourId" type="hidden" asp-for="TourId" />
                @for(int i=0; i < Model.NoOfDays; i++)
                {
                    <div class="mb-3">
                        <label class="form-label" asp-for="tiList[i].Day">Day</label>
                        <input type="text" class="form-control" asp-for="tiList[i].Day" id="aday" placeholder="Day" value="@(i+1)" readonly disabled/>
                        <span asp-validation-for="tiList[i].Day" class="text-danger" ></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="tiList[i].CityId">City</label>
                        <select asp-for="tiList[i].CityId" class="form-select" aria-label="Default select example" id="acityid">
                            @foreach(var city in Model.cities)
                            {
                                <option value=@city.CId>@city.Cname</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="tiList[i].Description">Description</label>
                        <input type="text" class="form-control" asp-for="tiList[i].Description" id="adescription" placeholder="Description" />
                        <span asp-validation-for="tiList[i].Description" class="text-danger"></span>
                    </div>
                }
            </div>
            <div>
                <button id="btnSubmit" type="submit" class="btn btn-success">Add Details</button>
            </div>
        </div>
    </div>
</form>



@section scripts { 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script></script>
        @{
        <partial name="_ValidationScriptsPartial" />
    } 
}