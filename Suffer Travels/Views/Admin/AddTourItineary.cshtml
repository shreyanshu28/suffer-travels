@using Suffer_Travels.ViewModel
@model TourViewModel

@{
    ViewData["title"] = "Edit Tour";
    Layout = "~/Views/Shared/User/_Admin.cshtml";
}

<form method="post" class="d-flex justify-content-center container main-body">
    <div class="card card-style">
          <div class="card-body d-flex flex-wrap flex-column justify-content-between">
            <div>
                  <input id="tourId" type="hidden" asp-for="TourId" value="@Model.TourId"/>
    @for(int i=1; i<=Model.NoOfDays; i++)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="tourItinerary.Day">Day</label>
            <input type="text" class="form-control" asp-for="tourItinerary.Day" id="aday" placeholder="Day" value=@i readonly disabled/>
            <span asp-validation-for="tourItinerary.Day" class="text-danger" ></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="tourItinerary.CityId">City</label>
            <select asp-for="tourItinerary.CityId" class="form-select" aria-label="Default select example" id="acityid">
                            @foreach(var city in Model.cities)
                            {
                                <option value=@city.CId>@city.Cname</option>
                            }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="tourItinerary.Description">Description</label>
            <input type="text" class="form-control" asp-for="tourItinerary.Description" id="adescription" placeholder="Description" />
            <span asp-validation-for="tourItinerary.Description" class="text-danger"></span>
        </div>
    }
            </div>
            <div>
                <button id="btnSubmit" type="submit" class="btn btn-success">Add Details</button>
            </div>
        </div>
    </div>
</form>



@section scripts { 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
    $(document).ready((event) => {
        $("#btnSubmit").click((event) => {
            const aday = document.querySelectorAll("#aday");
            const acityid = document.querySelectorAll("#acityid");
            const adescription = document.querySelectorAll("#adescription");

            let details = [];
            let day = [], cityid = [], description = [];

            const tourId = document.getElementById("tourId");

            for(let i = 0; i < aday.length; ++i){
                details.push({
                    Day: aday[i].value,
                    CityId: acityid[i].value,
                    Description: adescription[i].value,
                    TourId: tourId.value,
                })
            }

            $.ajax({
                type: "POST",
                url: '@Url.Action("SaveIteneraryDetails", "Admin")',
                data: {
                    TourItineary: JSON.stringify(details)
                },
                error: function (tourItinerary) {
                    window.location.replace('@Url.Action("SetIteneraryDetails", "Admin")')
                },
                success: function (tourItinerary) {
                    window.location.replace('@Url.Action("SetIteneraryDetails", "Admin")')
                }
            })

        });
    });
</script>
        @{
        <partial name="_ValidationScriptsPartial" />
    } 
}