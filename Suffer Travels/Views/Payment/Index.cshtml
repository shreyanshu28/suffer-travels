@model PaymentRequest
@{
    ViewData["Title"] = "Payment page";
    Layout = "~/Views/Shared/User/Customer.cshtml";
}
<form class="well form-horizontal" asp-action="ProcessRequestOrder" method="post" id="contact_form">

    <center>
        <h2><b>Enter your details for payment</b></h2>
    </center>
    <div class="form-group">
        <label class="col-md-4 control-label">Customer Name</label>
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <input placeholder="Name" class="form-control" type="text" asp-for="Name" autocomplete="off" required>
                <span asp-validation-for="Name" class="input-group-addon"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">E-Mail</label>
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <input placeholder="E-Mail Address" class="form-control" type="text" asp-for="Email" autocomplete="off" required>
                <span asp-validation-for="Email" class="input-group-addon"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Phone Number</label>
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <input placeholder="Phone" class="form-control" type="text" asp-for="PhoneNumber" autocomplete="off" required>
                <span asp-validation-for="PhoneNumber" class="input-group-addon"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Address</label>
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <input placeholder="Address" class="form-control" type="text" asp-for="Address" autocomplete="off" required>
                <span asp-validation-for="Address" class="input-group-addon"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Amount (₹)</label>
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <input placeholder="Amount (₹)" class="form-control" id="amount" type="text" asp-for="Amount" autocomplete="off" value="@ViewData["TotalAmount"]" disabled>
                <span asp-validation-for="Amount" class="input-group-addon"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4" style="text-align:center;">
            <button type="submit" class="btn btn-primary">Pay now<span class="glyphicon glyphicon-send"></span></button>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        const amount = document.getElementById("amount");
        amount.value = String(Number(amount.value))
        console.log(amount.value);
    </script>
}